# Imaging Intelligence Agent Environment Configuration
# Copy this file to .env and fill in your API keys
# IMPORTANT: Never commit .env with real API keys

# LLM Provider (anthropic for Claude API fallback when NIM unavailable)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# NVIDIA NGC API Key (for pulling NIM containers)
NGC_API_KEY=your_ngc_api_key_here

# NIM Mode: "local" uses Docker containers, "mock" returns synthetic data
IMAGING_NIM_MODE=local

# NIM Service URLs (defaults for local Docker deployment)
IMAGING_NIM_LLM_URL=http://localhost:8520/v1
IMAGING_NIM_VISTA3D_URL=http://localhost:8530
IMAGING_NIM_MAISI_URL=http://localhost:8531
IMAGING_NIM_VILAM3_URL=http://localhost:8532

# Allow mock fallback when NIM services are unavailable
IMAGING_NIM_ALLOW_MOCK_FALLBACK=true

# Milvus Configuration
IMAGING_MILVUS_HOST=localhost
IMAGING_MILVUS_PORT=19530

# PubMed (optional, increases rate limit)
NCBI_API_KEY=

# Ports
IMAGING_API_PORT=8524
IMAGING_STREAMLIT_PORT=8525
